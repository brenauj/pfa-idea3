%h2= "Boxes list"
.buttons
  = link_to "Create a new box", { :action => :create }, :class => "btn"
- if @boxes != nil && @boxes.count > 0
  %table.table{:class => "table-hover"}
    %thead
      %th Name
      %th Owner
      %th Description
      %th Number of ideas
    %tbody
      - @boxes.each do |box|
        %tr
          %td
            #{ link_to box.name, "#{box.id}/view" }
          - unless box.user.nil?
            %td= box.user.name
          - else
            %td
              %i no user
          %td= box.description
          %td= box.ideas.count
- else
  %i There is no box for the moment.
