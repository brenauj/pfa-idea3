%h2= "Boxes list"
.buttons
  = link_to "Create a new box", { :action => :create }, :class => "btn"
- if @boxes != nil && @boxes.count > 0
  %table.table{:class => "table-hover"}
    %tr
      %th Name
      %th Owner
      %th Description
      %th Number of ideas
    = render :partial => 'box_row', :collection => @boxes, :as => :box
- else
  %i There is no box for the moment.
